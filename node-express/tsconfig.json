{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./",
    "lib": [
      "es2020"
    ],
    "paths": {
      "#test/*": [
        "test/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules"]
}